<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="#EBEBEB"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/idAnimalAvatar"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/ic_launcher_foreground" />

        <TextView
            android:id="@+id/idPetName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="80dp"
            android:layout_toEndOf="@id/idAnimalAvatar"
            android:fontFamily="@font/noto_sans"
            android:text="Имя"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/idBreed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/idPetName"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="100dp"
            android:layout_toEndOf="@id/idAnimalAvatar"
            android:drawablePadding="2dp"
            android:fontFamily="@font/noto_sans"
            android:text="Порода:"
            android:textColor="#212528"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/idPetBreed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/idPetName"
            android:layout_marginStart="55dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@id/idAnimalAvatar"
            android:drawablePadding="2dp"
            android:fontFamily="@font/noto_sans"
            android:text="Муж."
            android:textColor="#212528"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/idAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/idBreed"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="100dp"
            android:layout_toEndOf="@id/idAnimalAvatar"
            android:drawablePadding="2dp"
            android:fontFamily="@font/noto_sans"
            android:text="Возраст:"
            android:textColor="#212528"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/idPetAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/idBreed"
            android:layout_marginStart="58dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@id/idAnimalAvatar"
            android:drawablePadding="2dp"
            android:fontFamily="@font/noto_sans"
            android:text="X лет"
            android:textColor="#212528"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/idPetType"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="320dp"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/ic_launcher_foreground" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
