<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.genuinecoder.springclient">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SpringClient"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".login_activity.LoginActivity"
            android:exported="true"
            android:label="@string/title_activity_login">
        </activity>
        <activity
            android:name=".main_menu_activity.MainMenuActivity"
            android:exported="true"
            android:label="Main Menu">
        </activity>
        <activity
            android:name=".order_page_activity.OrderPageActivity"
            android:exported="true"
            android:label="Order Page">
        </activity>
        <activity
            android:name=".greeting_screen.FirstActivity"
            android:exported="true"
            android:label="Greeting Screen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".employee_list_activity.EmployeeListActivity"
            android:exported="true"
            android:label="Employee List">
        </activity>
        <activity
            android:name=".pets_page_activity.PetsPageActivity"
            android:exported="true"
            android:label="Pet List">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".pets_page_activity.PetsPageActivity"/>
        </activity>
        <activity
            android:name=".pets_page_activity.AddPetActivity"
            android:exported="true"
            android:label="Add Pet Form"
            android:parentActivityName=".pets_page_activity.PetsPageActivity">
        </activity>
    </application>

</manifest>